<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" onKeyReleased="#onRootKeyRelease" prefWidth="270.0" spacing="30.0" stylesheets="@../css/commons.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.souchy.randd.ebishoal.amethyst.ui.components.LoginForm">
   <children>
      <TextField fx:id="usernameField" prefHeight="40.0" promptText="Username / Email" />
      <PasswordField fx:id="passwordField" prefHeight="40.0" promptText="Password" />
      <HBox alignment="CENTER_LEFT" spacing="40.0">
         <children>
            <Button fx:id="loginBtn" mnemonicParsing="false" onMouseClicked="#login" prefHeight="30.0" prefWidth="105.0" text="Log In" />
            <CheckBox fx:id="rememberMeChk" mnemonicParsing="false" text="Remember me" />
         </children>
      </HBox>
   </children>
</VBox>
