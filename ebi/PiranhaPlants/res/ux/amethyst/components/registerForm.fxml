<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" onKeyReleased="#onRootKeyRelease" prefWidth="270.0" spacing="30.0" stylesheets="@../css/commons.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.souchy.randd.ebishoal.amethyst.ui.components.RegisterForm">
   <children>
      <TextField fx:id="pseudoField" prefHeight="40.0" promptText="Display name" />
      <TextField fx:id="usernameField" prefHeight="40.0" promptText="Username" />
      <TextField fx:id="emailField" prefHeight="40.0" promptText="Email" />
      <PasswordField fx:id="passwordField" prefHeight="40.0" promptText="Password" />
      <HBox alignment="CENTER_LEFT" spacing="80.0">
         <children>
            <Button fx:id="signupBtn" mnemonicParsing="false" prefWidth="105.0" text="Sign Up" />
            <Label fx:id="helpLbl" style="-fx-border-width: 0;" text="Help">
               <styleClass>
                  <String fx:value="hover" />
                  <String fx:value="title6" />
                  <String fx:value="help" />
               </styleClass>
            </Label>
         </children>
      </HBox>
   </children>
</VBox>
